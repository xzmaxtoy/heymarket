# Server Configuration
PORT=3000
NODE_ENV=production
CORS_ORIGIN=https://your-production-domain.com

# Heymarket API Configuration
HEYMARKET_API_KEY=your_heymarket_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key  # For admin operations

# Batch Processing Configuration
BATCH_PROCESSING_RATE=5  # Messages per second
BATCH_MAX_RETRIES=3
BATCH_RETRY_DELAY=300000  # 5 minutes in milliseconds
BATCH_CLEANUP_INTERVAL=3600000  # 1 hour in milliseconds
BATCH_MAX_SIZE=10000  # Maximum recipients per batch

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=100  # Percentage of requests to monitor
SLA_WARNING_THRESHOLD=900000  # 15 minutes in milliseconds
SLA_CRITICAL_THRESHOLD=1800000  # 30 minutes in milliseconds

# Feature Flags
FEATURE_FLAG_NEW_BATCH_SYSTEM=true
FEATURE_FLAG_ANALYTICS_DASHBOARD=true
FEATURE_FLAG_PERFORMANCE_MONITORING=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ERROR_LOGGING_WEBHOOK=your_error_logging_webhook_url

# Cache Configuration
PREVIEW_CACHE_SIZE=1000  # Number of preview entries to cache
PREVIEW_CACHE_TTL=3600  # Time to live in seconds

# Notification Settings
ENABLE_SLACK_NOTIFICATIONS=true
SLACK_WEBHOOK_URL=your_slack_webhook_url
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_WEBHOOK_URL=your_email_webhook_url

# Security Settings
API_RATE_LIMIT=100  # Requests per minute
API_RATE_LIMIT_WINDOW=60000  # Window size in milliseconds
MAX_PAYLOAD_SIZE=10mb
